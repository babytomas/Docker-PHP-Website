# Copy init scripts
COPY scripts /home/init-scripts

# Run the init script
#RUN /bin/bash /home/init-scripts/init.sh

# Set mysql root password
ENV MYSQL_ROOT_PASSWORD password

# Other operation
# ...

# Remove scripts
RUN rm -rf /home/init-scripts
